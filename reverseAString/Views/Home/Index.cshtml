@model reverseAString.Models.Reverse

@{
    ViewBag.Title = "Reverse a String";
}



<div class="container">

    <!-- Page-Title -->
    <div class="row">
        <div class="col-sm-12">            
            <h4 class="page-title">Reverse a String</h4>
        </div>
    </div>
    
    <div class="row">
        <div class="col-md-6">
            <div >
                               
                <h4 >Enter a string to reverse</h4>

                @using (Html.BeginForm("Index", "Home", FormMethod.Post, new { @class = "form-horzontal" }))
                {
                           <h2>Reverse a String</h2>
                            <p>
                                
                                @Html.TextAreaFor(m => m.sInput, new { @class = "form-control styled" })
                            </p>
                            <p><input type="submit" value="submit" /></p>                   
                }



                @*<form class="form-horizontal" role="form" >       
                </form>*@
            </div>
        </div><!-- end col -->

        <div class="col-md-6">
            <div >

                <h4 >Reversed String</h4>

                @MarkdownHelper.Markdown(@Model.sOutput)

            </div>
        </div><!-- end col -->

    </div>
    <!-- End row -->


   
</div> <!-- container -->




